<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:background="@color/dark_green_transparent"
    tools:context=".user_profile.User_Profile"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/useThisFragmentID"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout

        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_weight=".6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                style="@style/Theme.AppCompat.Light.NoActionBar"
                app:titleTextColor="@color/green_dark"
                android:background="@drawable/eyeplant_toprec">
            </androidx.appcompat.widget.Toolbar>

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/top_user_profile" />
        </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_weight=".4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/bottom_user_profile" />
            <include layout="@layout/layout_bottom_navigation"/>

        </RelativeLayout>
    </LinearLayout>
    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:padding="16dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_bar_menu"
        app:itemTextColor="@color/green_dark"
        android:background="@drawable/background_button_rectangle"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        />

</androidx.drawerlayout.widget.DrawerLayout>
