<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".user_profile.User_Profile">


    <LinearLayout
        android:id="@+id/user_profile_pic_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_margin="5dp"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_weight=".3"
            android:elevation="5dp">

            <LinearLayout
                android:id="@+id/profileLinear"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_margin="3dp"
                    android:id="@+id/profilePicture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:onClick="onClick"
                    android:src="@drawable/avatar_final"
                    app:civ_border_color="@color/green_dark" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:id="@+id/hintTextLinear"
                android:gravity="center"
                android:layout_below="@id/profileLinear"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/hint_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/click_on_image_to_edit_profile_picture"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_below="@id/hintTextLinear"
                android:id="@+id/editNameLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/userNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/user876543"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            <EditText
                android:layout_centerInParent="true"
                android:id="@+id/username_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@color/green_fade"
                android:hint="@string/chose_a_user_name"
                android:elevation="5dp"
                android:textAlignment="center"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/editUserNameButton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:elevation="5dp"
                android:src="@drawable/pen"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="onClick"
                android:visibility="visible"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/saveUserNameButton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/check"
                android:onClick="onClick"
                android:text="@string/save"
                android:elevation="5dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="invisible" />

            </RelativeLayout>





        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight=".7"
            android:background="@color/white">

        </RelativeLayout>


    </LinearLayout>


</merge>